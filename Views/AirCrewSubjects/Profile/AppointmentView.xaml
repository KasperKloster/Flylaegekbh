<UserControl x:Class="FlyveLægeKBH.Views.AirCrewSubjects.Profile.AppointmentView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FlyveLægeKBH.Views.AirCrewSubjects.Profile"
             xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="150"/>
                <RowDefinition Height="100"/>
                <RowDefinition Height="100"/>
                <RowDefinition Height="100"/>
                <RowDefinition Height="100"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            
            <!-- This section is for creating a new appointment -->
            <!-- First two stackpanel provides introduction for the user -->
            <StackPanel Orientation="Vertical" 
                        VerticalAlignment="Top" 
                        Grid.Row="0" 
                        >
                <TextBlock Text="For at oprette en ny Booking:" FontWeight="Bold" FontSize="14"/>
                <TextBlock Text="Tryk på Indlæs knappen." />
                <TextBlock Text="Dette er blot for at simulere et login system." />
                <TextBlock Text="Vælg dernæst én Pilot eller én Cabin Crew fra én af dropdown menuerne." />
                <TextBlock Text="Resten af funktionaliteterne på denne side vil nu anvende den valgte personens data"/>

            </StackPanel>
            <StackPanel Orientation="Vertical"
                        VerticalAlignment="Top"
                        HorizontalAlignment="Right"
                        Grid.Row="0">
                
                <Button Style="{StaticResource submitBtn}"
                    x:Name="Load_AllPilotsAndCabinCrews_btn"
                    Content="indlæs alle Piloter og Cabin Crew"
                    Margin="0,10,0,0"
                    Height="30"
                    Width="200"
                    HorizontalAlignment="Right"                   
                    Command="{Binding GetALLPilotsAndCabinCrewCommand}"/>
                
                <StackPanel Orientation="Horizontal"
                            >
                    <Label Content="Vælg pilot"
                           Margin="0,10,44,0"/>
                    <ComboBox
                    x:Name="ShowAllPilots"                    
                    Width="120"
                    Height="35"
                    Margin="0,10,0,0"
                    ItemsSource="{Binding AllPilots}"
                    DisplayMemberPath="FirstName"
                    SelectedItem="{Binding SelectedPilot}"/>
                    

                </StackPanel>

                <StackPanel Orientation="Horizontal"
                            >
                    <Label Content="Vælg Cabin Crew"
                           Margin="0,10,10,0"/>
                    
                    <ComboBox
                    x:Name="ShowAllCabinCrews"                    
                    Width="120"
                    Height="35"
                    Margin="0,10,0,0"
                    ItemsSource="{Binding AllCabinCrews}"
                    DisplayMemberPath="FirstName"/>

                </StackPanel>               

            </StackPanel>
            
            <!-- thierd stackpanel if for the inputs and actions -->
            <StackPanel Orientation="Horizontal"
                        VerticalAlignment="Top"
                        Grid.Row="1" 
                        Grid.Column="1"
                        Height="100">

                <Button Style="{StaticResource submitBtn}"
                    x:Name="Load_AllExaminations_btn"
                    Content="Vælg Undersøgelse"
                    Margin="10,0,0,0"
                    Height="30"
                    HorizontalAlignment="Right"                        
                    Command="{Binding GetALLExaminationsCommand}"
                    />

                <StackPanel Orientation="Vertical"
                            Width="150">
                    
                    <Label x:Name="create_ExaminationName"
                        Content="Undersøgelse Menu"
                        Foreground="Black"
                        HorizontalAlignment="Right"
                        HorizontalContentAlignment="Center"
                        Width="150"
                        Height="35"
                        Margin="0,0,0,0"/>

                    <ComboBox x:Name="ShowAllExaminations"                    
                        Width="120"
                        Height="35"
                        Margin="10,0,0,0"
                        ItemsSource="{Binding AllExaminations}"
                        DisplayMemberPath="ExaminationName"
                        SelectedItem="{Binding SelectedExamination}"/>
                    
                </StackPanel>
               


                <Button Style="{StaticResource submitBtn}"
                    x:Name="Find_Authoriazed_AME_btn"
                    Content="Find AME"
                    Margin="10,0,0,0"
                    Height="30"
                    HorizontalAlignment="Right"
                    Command="{Binding GetAuthoriazedAMEByExaminationCommand}"
                    CommandParameter="{Binding ExaminationName}"/>

                <StackPanel Orientation="Vertical"
                            Width="150">
                    <Label x:Name="choose_AME_LB"
                   Content="AME Menu"
                   Foreground="Black"
                   HorizontalAlignment="Left"
                   HorizontalContentAlignment="Center"
                   Width="150"
                   Height="35"
                   Margin="10,0,0,0"/>

                    <ComboBox
                    x:Name="authorizedAMEsComboBox"                    
                    Width="120"
                    Height="35"
                    Margin="10,0,0,0"
                    ItemsSource="{Binding AuthorizedAMEs}"
                    DisplayMemberPath="FirstName"
                        SelectedItem="{Binding SelectedAME}"/>

                </StackPanel>              

            </StackPanel>

            <StackPanel Orientation="Horizontal"
                        VerticalAlignment="Top"
                        Grid.Row="2" 
                        Grid.Column="1"
                        Height="100"
                        >

                <StackPanel Orientation="Vertical"
                            Width="150">
                    <Label x:Name="chooseDate"
                       Content="Vælg Dato"
                       Foreground="Black"
                   HorizontalAlignment="Left"
                   HorizontalContentAlignment="Center"
                   Width="150"
                   Height="35"
                   Margin="10,0,0,0"/>

                    <DatePicker                        
                        SelectedDate="{Binding AppointmentDate}"/>
                </StackPanel>

                <Button Style="{StaticResource submitBtn}"
                    x:Name="ShowAvailableStartTimes_btn"
                    Content="Find Ledig Tid"
                    Margin="10,0,0,0"
                    Height="30"
                    HorizontalAlignment="Right"
                    Command="{Binding GetAvailableStartTimesCommand}"
                    CommandParameter="{Binding AME_SSN}"/>

                <StackPanel Orientation="Vertical"
                            Width="150">
                    
                    <Label x:Name="chooseTime"
                       Content="Vælg Tidspunkt"
                       Foreground="Black"
                   HorizontalAlignment="Left"
                   HorizontalContentAlignment="Center"
                   Width="150"
                   Height="35"
                   Margin="10,0,0,0"/>

                    <ComboBox
                    x:Name="AvailableStartTimesMenu"                    
                    Width="120"
                    Height="35"
                    Margin="10,0,0,0"
                    ItemsSource="{Binding StartTime}"
                    SelectedItem="{Binding SelectedStartTime}"
                    />
                </StackPanel>
                
                
                




            </StackPanel>
            
            
            
            <!--This is to view future appointments-->
            <StackPanel Orientation="Horizontal" Grid.Row="3" Grid.Column="1">
                <TextBox Style="{StaticResource searchBar}" x:Name="Get_all_info_test_tbx" Text="{Binding SocialSecurityNumber}" Width="262" Padding="10"/>
                <Button Style="{StaticResource submitBtn}" x:Name="Get_All_Appointments_btn" Content=" Hent mine bookinger" Margin="10" Height="30" Width="150" Command="{Binding GetBookingsBySSNCommand}" CommandParameter="{Binding}"/>
            </StackPanel>
            
            <StackPanel Grid.Row="4" HorizontalAlignment="Left">
                <ListView x:Name="Appointments_listView" 
                      ItemsSource="{Binding Appointments}" 
                      IsSynchronizedWithCurrentItem="True" 
                      Width="620" 
                      HorizontalContentAlignment="Left"
                      SelectionMode="Single">
                    <ListView.View>
                        <GridView>
                            <GridViewColumn DisplayMemberBinding="{Binding AppointmentID}" Header="AppointmentID"/>
                            <GridViewColumn DisplayMemberBinding="{Binding PilotCabinCrew_SSN}" Header="PilotCabinCrew_SSN"/>
                            <GridViewColumn DisplayMemberBinding="{Binding AME_SSN}" Header="AME_SSN"/>
                            <GridViewColumn DisplayMemberBinding="{Binding ExaminationName}" Header="ExaminationName"/>
                            <GridViewColumn DisplayMemberBinding="{Binding StartTime}" Header="StartTime"/>
                            <GridViewColumn DisplayMemberBinding="{Binding AppointmentDate}" Header="AppointmentDate"/>

                        </GridView>
                    </ListView.View>
                </ListView>


            </StackPanel>


            <StackPanel Grid.Row="5" Orientation="Horizontal" HorizontalAlignment="Left">
                <Button Style="{StaticResource submitBtn}"
                    x:Name="Edit_appointment_btn"
                    Content="Ændre booking"
                    Margin="10"
                    Height="30"
                    HorizontalAlignment="Right"
                    Command="{Binding UpdateAppointmentCommand}"
                    CommandParameter="{Binding ElementName=Appointments_listView,
                                        Path=SelectedItem}"/>

                <Button Style="{StaticResource deleteBtn}" 
                    x:Name="Delete_Appointments_btn" 
                    Content=" Slet booking" 
                    Margin="10" 
                    Height="30" 
                    HorizontalAlignment="Right"
                    Command="{Binding DeleteAppointmentByIDCommand}"
                    CommandParameter="{Binding ElementName=Appointments_listView, 
                                        Path=SelectedItem.AppointmentID}"/>

                <Button Style="{StaticResource submitBtn}" x:Name="new_appointment_btn" Content="Ny booking" Margin="10" Height="30" HorizontalAlignment="Right" />

            </StackPanel>


            <!--The following is for updating/changing your appointment-->

            <StackPanel Grid.Row="6"
                    Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    >

                <Label x:Name="ameSSNLBL"
                   Content="Læge"
                   Foreground="Black"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Top"
                   Width="100"
                   Height="35"
                   Margin="0,0,10,0"/>
                <TextBox x:Name="ameSNNTB"
                     Foreground="Black"
                     Text="{Binding SelectedItem.AME_SSN, ElementName=Appointments_listView}"
                     Width="120"
                     Height="35"
                     VerticalAlignment="Top"/>

                <Label x:Name="examinationNameLBL"
                   Content="Undersøgelse"
                   Foreground="Black"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Top"
                   Width="100"
                   Height="35"
                   Margin="35,0,10,0"/>
                <TextBox x:Name="examinationNameTB"
                     Foreground="black"
                     Text="{Binding SelectedItem.ExaminationName, ElementName=Appointments_listView}"
                     Width="120"
                     Height="35"
                     VerticalAlignment="Top"/>

            </StackPanel>

            <StackPanel Grid.Row="7"
                    Orientation="Horizontal"
                    HorizontalAlignment="Center">

                <Label x:Name="startTimeLBL"
                   Content="Tid"
                   Foreground="Black"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Top"
                   Width="100"
                   Height="35"
                   Margin="0,0,10,0"/>
                <TextBox x:Name="startTimeTB"
                     Foreground="black"
                     Text="{Binding SelectedItem.StartTime, ElementName=Appointments_listView}"
                     Width="120"
                     Height="35"
                     VerticalAlignment="Top"/>

                <Label x:Name="appointmentDateLBL"
                   Content="Tid"
                   Foreground="Black"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Top"
                   Width="100"
                   Height="35"
                   Margin="35,0,10,0"/>
                <TextBox x:Name="appointmentDateTB"
                     Foreground="black"
                     Text="{Binding SelectedItem.AppointmentDate, ElementName=Appointments_listView}"
                     Width="120"
                     Height="35"
                     VerticalAlignment="Top"/>

            </StackPanel>

            <StackPanel Grid.Row="8"
                    Orientation="Horizontal"
                    HorizontalAlignment="Center">

                <!--just for development an first iteration
            remove these or do somthing with these when refactor the view-->

                <Label x:Name="appointmentIDLBL"
                   Content="appointmentID"
                   Foreground="Black"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Top"
                   Width="100"
                   Height="35"
                   Margin="0,0,10,0"/>
                <TextBox x:Name="appointmentIDTB"
                     Foreground="black"
                     Text="{Binding SelectedItem.AppointmentID, ElementName=Appointments_listView}"
                     Width="120"
                     Height="35"
                     VerticalAlignment="Top"/>

                <Label x:Name="pilotCabinCrewSNNLBL"
                   Content="pilotCabinCrew_SNN"
                   Foreground="Black"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Top"
                   Width="100"
                   Height="35"
                   Margin="35,0,10,0"/>
                <TextBox x:Name="pilotCabinCrewSNNTB"
                     Foreground="black"
                     Text="{Binding SelectedItem.PilotCabinCrew_SSN, ElementName=Appointments_listView}"
                     Width="120"
                     Height="35"
                     VerticalAlignment="Top"/>
            </StackPanel>

        </Grid>
    </ScrollViewer>

</UserControl>
